body
  background #1E202B
  font-family 'Montserrat', sans-serif
  margin 0
  padding 0
  position relative

a
  color white
  text-decoration none

h1
  color white
  
h3
  background -webkit-linear-gradient(45deg, #AF45D0, #2AA4E5, #70C118)
  font-size 1em
  font-weight 300
  letter-spacing 0.2em
  margin 35px auto 40px auto
  opacity .9
  padding 0px
  text-align center
  text-transform uppercase
  width 95%
  -webkit-background-clip text
  -webkit-text-fill-color transparent


div.main
  align-items center
  clear both
  display flex
  height 100vh
  justify-content center
  width 100vw
