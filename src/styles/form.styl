form
  width 400px
  input
    background rgba(255,255,255,.1)
    border none
    border-radius 4px
    color white
    display block
    font-size 14px
    margin-bottom 15px
    padding 10px 15px
    width calc(100% - 30px)
  button
    background transparent
    border 1px solid white
    border-radius 2.5em
    color white
    float right
    font-weight 700
    padding 10px 15px
    text-transform uppercase
    width 40%

div.alert
  background #e4bdf0
  border-radius 4px
  color black
  font-size 12px
  margin-bottom 8px
  padding 6px 10px
